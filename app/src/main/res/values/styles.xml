<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text_primary</item>
        <item name="colorPrimaryDark">@color/text_primary</item>
        <item name="colorAccent">@color/text_primary</item>
    </style>

    <style name="SandroidAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/general_background</item>
        <item name="android:windowBackground">@drawable/sandroid_bg</item>
        <item name="colorControlNormal">@color/text_primary</item>
        <item name="colorControlActivated">@color/text_primary</item>
    </style>

    <style name="SplashTheme" parent="SandroidAppTheme">
        <item name="android:windowBackground">@drawable/sandroid_splash_logos</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
