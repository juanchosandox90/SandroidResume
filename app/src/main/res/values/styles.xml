<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text_primary</item>
        <item name="colorPrimaryDark">@color/text_primary</item>
        <item name="colorAccent">@color/text_primary</item>
        <item name="colorControlActivated">@color/color_input_hint</item>
        <item name="colorControlHighlight">@color/color_input_hint</item>
    </style>

    <style name="SandroidAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/general_background</item>
        <item name="android:windowBackground">@drawable/sandroid_bg</item>
        <item name="colorControlNormal">@color/text_primary</item>
        <item name="colorControlActivated">@color/text_primary</item>
    </style>

    <style name="SplashTheme" parent="SandroidAppTheme">
        <item name="android:windowBackground">@drawable/sandroid_splash_logos</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Widget"/>

    <style name="Widget.TextInputLayout">
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
    </style>

    <style name="Widget.TextEdit">
        <item name="android:layout_height">@dimen/match_parent</item>
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:textColorHighlight">@color/color_text_highlight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
        <item name="android:background">@drawable/state</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="Widget.Hint">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
